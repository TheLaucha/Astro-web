---
import type { faq } from "../types/types";
import Separator from "./Separator.astro";

export interface Props{
  item:faq
}

const {item} = Astro.props
---

<div class="faqItem">
  <h3>{item.question}</h3>
  <p>{item.response}</p>
  <Separator></Separator>
</div>

<style>
  h3{
    font-size: 34px;
    color: #dfddba;
  }
  .faqItem{
    text-align: center;
  }
</style>